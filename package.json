{
  "name": "react-utilities",
  "version": "0.3.0",
  "description": "React utility components ",
  "main": "index.js",
  "repository": "zjuasmn/react-utilities",
  "author": "zjuasmn <zjuasmn@gmail.com>",
  "license": "MIT",
  "files": [
    "/*.js",
    "!*.config.js"
  ],
  "scripts": {
    "build": "babel src -d . --ignore __test__",
    "start": "webpack-dev-server --hot --inline --content-base public",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha src/__test__",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build-lib": "babel src -d . --ignore __test__",
    "build-umd": "webpack src/index.js umd/react-utilities.js",
    "build-min": "webpack -p src/index.js umd/react-utilities.min.js",
    "tdd": "cross-env NODE_ENV=test DEBUG=react-utilities:* nyc --reporter=html --reporter=text mocha src/__test__ -w",
    "prerelease": "npm run build",
    "release": "node ./scripts/release.js"
  },
  "dependencies": {
    "debug": "^2.6.1",
    "is-equal-shallow": "^0.1.3",
    "is-plain-object": "^2.0.1",
    "react": "^15.0.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.16",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "invariant": "^2.2.2",
    "istanbul": "^0.4.5",
    "jsdom": "^9.11.0",
    "lodash": "^4.17.4",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "readline-sync": "^1.4.6",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  },
  "nyc": {
    "require": [
      "babel-register",
      "babel-polyfill",
      "./src/__test__/setup.js"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
